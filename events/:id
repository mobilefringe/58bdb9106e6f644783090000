<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            event_details = getEventDetailsBySlug(slug);
            renderEventDetails('#promo_details_container', '#promo_details_template', event_details)
            renderEventDetails('#promo_details_container_2', '#promo_details_template_2', event_details)
            
            var store_slug = promo_details.store_detail_btn;
            var categories = getCategoriesNamesByStoreSlug(store_slug);
            console.log(categories);
            renderSimple("#category_container", "#category_template", categories);
            
            var store_details = getStoreDetailsBySlug(store_slug);
            renderSimple("#store_details_container", "#store_details_template", store_details);
            show_content();
            $('#top_nav_promotions').addClass('active_yellow')
        }
        loadMallDataCached(renderAll); 
    });
</script>
