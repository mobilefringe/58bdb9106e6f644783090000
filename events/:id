<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            event_details = getEventDetailsBySlug(slug);

            renderEventDetails('#promo_details_container', '#promo_details_template', event_details)
            renderEventDetails('#promo_details_container_2', '#promo_details_template_2', event_details)
            
            show_content();
            $('#top_nav_events').addClass('active_yellow')
        }
        loadMallDataCached(renderAll); 
    });
</script>
