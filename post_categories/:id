<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            var blogs = getBlogList()
            var posts = getAllPublishedPosts();
            var pathArray = window.location.pathname.split( '/' );
            
            var slug = pathArray[pathArray.length-1];
            var posts = getBlogDataBySlug(slug).posts;
            var published_posts = posts.sortBy(function(o){ return new Date(o.publish_date) }).reverse();
            renderPosts("#blog_container", "#blog_template", published_posts);
            renderBlogs("#blog_links_container", "#blog_links_template", blogs);
            renderBlogs("#blog_links_container_2", "#blog_links_template_2", blogs);
            show_content();
            blog_searcher();
            $("#"+slug).addClass('active_cat');
        }
        loadMallDataCached(renderAll); 
		
    });
</script>