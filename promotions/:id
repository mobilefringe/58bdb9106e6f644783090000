<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            promo_details = getPromotionDetailsBySlug(slug);
            renderPromoDetails('#promo_details_container', '#promo_details_template', promo_details)
            renderPromoDetails('#promo_details_container_2', '#promo_details_template_2', promo_details)
            
            if(promo_details.promotionable_type != "Property") {
                var store_slug = promo_details.store_detail_btn;
                var store_details = getStoreDetailsBySlug(store_slug);
                var categories = getCategoriesNamesByStoreSlug(store_slug);
                renderSimple("#category_container", "#category_template", categories);
                renderSimple("#store_btn_container", "#store_btn_template", store_details);

                var hour_ids = store_details.store_hours;
                if (hour_ids != null && hour_ids != undefined && hour_ids.length > 0){
                    var hours = getHoursForStoreSlug(store_details.slug).sortBy(function(o){ return o.day_of_week });
                    renderStoreDetailsHours('#reg_hours_container','#reg_hours_template', hours, 'reg_hours');
                    $('#hours').show();
                }
                
                var store_details = getStoreDetailsBySlug(store_slug);
                var phone = store_details.phone;
                if(phone.length > 0){
                    renderSimple("#store_details_container", "#store_details_template", store_details);   
                } 
            }
            
            show_content();
            $('#top_nav_promotions').addClass('active_yellow')
        }
        loadMallDataCached(renderAll); 
    });
</script>